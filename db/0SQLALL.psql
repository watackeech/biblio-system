-- total_stockとcurrent_stockを更新するUPDATE文
UPDATE book_master
SET
  total_stock = (
    SELECT COUNT(*)
    FROM books
    WHERE books.master_id = book_master.id
  ),
  current_stock = (
    SELECT COUNT(*)
    FROM books
    WHERE books.master_id = book_master.id
      AND books.status = 'in_stock'
  );


